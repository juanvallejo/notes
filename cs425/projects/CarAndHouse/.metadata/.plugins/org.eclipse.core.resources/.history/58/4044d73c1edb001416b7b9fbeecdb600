package CarAndHouse;
import javafx.beans.property.SimpleStringProperty;
import javafx.beans.property.StringProperty;

/*
 * See Introspector and Beaninfo classes for introspecting beans
 */
public class BeanClass {
	/*
	 * This is a good example of boilerplate code. Java is notorious for this.
	 * Other languages evolve to reduce boilerplate.
	 */
	// Initializer
	private StringProperty text = new SimpleStringProperty("Default Value");

	public final String getText() {
		return text.get();
	}

	public final void setText(String text) {
		this.text.set(text);
	}

	public final StringProperty getTextProperty() {
		return text;
	}
}
